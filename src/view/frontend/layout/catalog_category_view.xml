<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="head.additional">
            <!-- Breadcrumbs Structured Data -->
            <block class="Magento\Framework\View\Element\Template" name="flipdevseo.sd.breadcrumbs.wrapper" template="FlipDev_Seo::structureddata/js.phtml" ifconfig="flipdev_seo/breadcrumbs_sd/enabled">
                <block class="FlipDev\Seo\Block\StructuredData\Breadcrumbs" name="flipdevseo.sd.breadcrumbs" template="FlipDev_Seo::structureddata/breadcrumbs.phtml" />
            </block>
            <!-- Category/CollectionPage Structured Data -->
            <block class="Magento\Framework\View\Element\Template" name="flipdevseo.sd.category.wrapper" template="FlipDev_Seo::structureddata/js.phtml" ifconfig="flipdev_seo/category_sd/enabled">
                <block class="FlipDev\Seo\Block\StructuredData\Category" name="flipdevseo.sd.category" template="FlipDev_Seo::structureddata/category.phtml" />
            </block>
            <!-- FAQ Structured Data -->
            <block class="Magento\Framework\View\Element\Template" name="flipdevseo.sd.faq.wrapper" template="FlipDev_Seo::structureddata/js.phtml" ifconfig="flipdev_seo/faq_sd/enabled">
                <block class="FlipDev\Seo\Block\StructuredData\Faq" name="flipdevseo.sd.faq" template="FlipDev_Seo::structureddata/faq.phtml" />
            </block>
        </referenceBlock>
        <referenceBlock name="footer">
            <block class="FlipDev\Seo\Block\Template" name="flipdevseo.content.grouping" template="FlipDev_Seo::google/content-grouping.phtml" ifconfig="flipdev_seo/google_content_grouping/category">
                <action method="setType">
                    <argument name="name" xsi:type="string">category</argument>
                </action>
            </block>
        </referenceBlock>
    </body>
</page>