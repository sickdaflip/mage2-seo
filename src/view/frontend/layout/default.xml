<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="after.body.start">
            <block class="Magento\Framework\View\Element\Template" name="flipdevseo.sd"
                   template="FlipDev_Seo::structureddata/js.phtml" before="-">
                <block class="FlipDev\Seo\Block\StructuredData\Organization" name="flipdevseo.sd.organization" template="FlipDev_Seo::structureddata/organization.phtml" ifconfig="flipdevseo/organization_sd/enabled" />
            </block>
            <block class="FlipDev\Seo\Block\Template" name="flipdevseo.gtm" template="FlipDev_Seo::google/tagmanager.phtml" ifconfig="flipdevseo/google_tag_manager/enabled" />
        </referenceContainer>
        <referenceBlock name="footer_links">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="sitemap-link">
                <arguments>
                    <argument name="label" xsi:type="string">Sitemap</argument>
                    <argument name="path" xsi:type="string">sitemap</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="before.body.end">
            <block class="FlipDev\Seo\Block\TrustedStores" name="flipdevseo.gts" template="FlipDev_Seo::google/trusted-store.phtml" ifconfig="flipdevseo/google_trusted_store/enabled" />
        </referenceBlock>
    </body>
</page>